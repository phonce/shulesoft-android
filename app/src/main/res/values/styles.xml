<resources>

   <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
       <!-- &lt;!&ndash; colorPrimary is used, for instance, for the default ActionBar
             (but not Toolbar) background.
              We specify the same color for the toolbar background in
              toolbar.xml.. &ndash;&gt; -->
        <item name="colorPrimary">@color/colorPrimary</item>

       <!-- &lt;!&ndash; colorPrimaryDark is used for  the status bar (with the
             battery, clock, etc). &ndash;&gt; -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

       <!-- &lt;!&ndash; colorAccent is used as the default value for
             colorControlActivated which is used to tint widgets. &ndash;&gt; -->
        <item name="colorAccent">#FF4081</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
